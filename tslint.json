{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "extends": [
    "angular-tslint-rules"
  ],
  "rules": {
    "component-selector": [
      true,
      "element",
      ["app"],
      "kebab-case"
    ],
    "directive-selector": [
      true,
      "attribute",
      ["app"],
      "camelCase"
    ],
    "i18n": [
      true,
      "check-text"
    ],
    "import-blacklist": [
      true
    ],
    "label-position": true,
    "no-string-literal": false,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "object-literal-sort-keys": false,
    "completed-docs": true,

    // following rules are temporary, will be fixed in next commit
    "promise-function-async": false,
    "no-unbound-method": false,
    "comment-type": false,
    "template-cyclomatic-complexity": [false, 5]
  }
}
