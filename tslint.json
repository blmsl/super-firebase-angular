{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "extends": [
    "angular-tslint-rules"
  ],
  "rules": {
    "component-selector": [
      true,
      "element",
      ["app"],
      "kebab-case"
    ],
    "directive-selector": [
      true,
      "attribute",
      ["app"],
      "camelCase"
    ],
    "i18n": [
      true,
      "check-text"
    ],
    "import-blacklist": [
      true
    ],
    "label-position": true,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "object-literal-sort-keys": false,
    "completed-docs": true
  }
}
